@model TTTStatisticsLibrary.FullStatistics

@{
    ViewBag.Title = "Статистика";
    Layout = "~/Views/Shared/_StatisticsLayout.cshtml";
}
<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>Дата и время игры</th>
            <th>Число ходов</th>
            <th>Игрок за крестики</th>
            <th>Игрок за нолики</th>
            <th>Результат игры</th>
        </tr>
        @foreach (var statistic in Model.StatisticsList)
        {
            <tr>
                <td>@statistic.GameDate</td>
                <td>@statistic.MovesCount</td>
                <td>@statistic.TicPlayer</td>
                <td>@statistic.TacPlayer</td>
                <td>@statistic.GameResult</td>
            </tr>
        }
    </table>
</div>
<div class="alert alert-info" role="alert">
    Процент побед пользователя: @Model.PlayerWinPercent
</div>